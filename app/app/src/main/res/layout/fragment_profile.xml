<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/green_200"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="40dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-10dp"
        app:backgroundTint="@color/green_200"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/userImage"
        app:layout_constraintEnd_toEndOf="@id/userImage"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editUsername"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:background="@color/transparent"
        app:tint="@color/green_200"
        app:layout_constraintStart_toEndOf="@id/editUsername"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/username"
        />

    <TextView
        android:id="@+id/countText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countText"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/echinocactus"
        style="@style/CardViewSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/echinocactus"/>
            <TextView
                android:id="@+id/countEchinocactus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewText"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mimosa"
        style="@style/CardViewSize"
        app:layout_constraintStart_toStartOf="@id/echinocactus"
        app:layout_constraintTop_toBottomOf="@id/echinocactus"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mimoza"/>
            <TextView
                android:id="@+id/countMimosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewText"
                android:layout_gravity="center"
                android:layout_marginStart="40dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/monstera"
        style="@style/CardViewSize"
        app:layout_constraintStart_toStartOf="@id/mimosa"
        app:layout_constraintTop_toBottomOf="@id/mimosa"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/monstera"/>
            <TextView
                android:id="@+id/countMonstera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewText"
                android:layout_gravity="center"
                android:layout_marginStart="40dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/orchid"
        style="@style/CardViewSize"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/countText"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/orchid"/>
            <TextView
                android:id="@+id/countOrchid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewText"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rose"
        style="@style/CardViewSize"
        app:layout_constraintEnd_toEndOf="@id/orchid"
        app:layout_constraintTop_toBottomOf="@id/orchid"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rose"/>
            <TextView
                android:id="@+id/countRose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardViewText"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>