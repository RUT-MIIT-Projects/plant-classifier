<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArticlesFragment">

    <ImageButton
        android:id="@+id/echinocactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="@color/transparent"
        android:src="@drawable/echinocactus"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mimosa"/>

    <ImageButton
        android:id="@+id/mimosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mimosa"
        android:backgroundTintMode="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/echinocactus"
        app:layout_constraintBottom_toTopOf="@id/monstera"/>


    <ImageButton
        android:id="@+id/monstera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/monstera"
        android:backgroundTintMode="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mimosa"
        app:layout_constraintBottom_toTopOf="@id/orchid"/>

    <ImageButton
        android:id="@+id/orchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/orchid"
        android:backgroundTintMode="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monstera"
        app:layout_constraintBottom_toTopOf="@id/rose"/>


    <ImageButton
        android:id="@+id/rose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rose"
        android:backgroundTintMode="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orchid" />

</androidx.constraintlayout.widget.ConstraintLayout>